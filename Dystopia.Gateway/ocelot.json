{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{everything}", // Forward requests to API service
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "api", "Port": 4951 }
      ],
      "UpstreamPathTemplate": "/api/{everything}",
      "UpstreamHttpMethod": [ "POST", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/{everything}", // Forward requests to API-GET service
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "api-get", "Port": 4952 }
      ],
      "UpstreamPathTemplate": "/api/{everything}",
      "UpstreamHttpMethod": [ "GET" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}
